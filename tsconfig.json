{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "outDir": "dist",
    "noEmit": true,
    "declaration": true
  },
  "include": [
    "src",
    "types.d.ts"
  ],
  "exclude": [
    "**/*.stories.tsx",
    "**/*.spec.tsx",
    "src/setupTests.ts"
  ]
}
